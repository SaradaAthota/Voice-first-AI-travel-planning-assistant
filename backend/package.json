{
    "name": "voice-travel-assistant-backend",
    "version": "1.0.0",
    "description": "Voice-first AI Travel Planning Assistant - Backend",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "npm install && tsc",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest --testPathPattern=unit",
        "test:integration": "jest --testPathPattern=integration",
        "lint": "eslint src --ext .ts",
        "migrate": "tsx src/db/migrate.ts",
        "kill-port": "powershell -ExecutionPolicy Bypass -File kill-port-3000.ps1"
    },
    "keywords": [
        "travel",
        "ai",
        "voice",
        "assistant"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@supabase/supabase-js": "^2.39.0",
        "chromadb": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "ffmpeg-static": "^5.3.0",
        "fluent-ffmpeg": "^2.1.3",
        "multer": "^1.4.5-lts.1",
        "openai": "^4.20.1",
        "pg": "^8.11.3",
        "puppeteer": "^24.15.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/fluent-ffmpeg": "^2.1.28",
        "@types/jest": "^29.5.14",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.6",
        "@types/pg": "^8.10.9",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.4",
        "ts-jest": "^29.4.6",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}
